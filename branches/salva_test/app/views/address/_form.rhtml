<div class="row">
<label for="addresstype_id" class="label"><%= get_label('addresstype_id') %> <span class="required">*</span></label>
 <div id="addresstype_id">
<%= select_conditions('edit', Addresstype,  1,  :conditions => "addresstypes.id NOT IN (SELECT addresstypes.id FROM addresstypes, addresses WHERE addresses.addresstype_id = addresstypes.id AND addresses.user_id = #{session[:user]})") %>
</div>
</div>

<div class="row">
<label for="location" class="label"><%= get_label('location') %> <span class="required">*</span></label>
<%= text_area 'edit', 'location', 'rows' => 4, 'cols' => 40, 'tabindex' => 2, 'id' => 'location' %>
</div>

<div class="row">
<label for="pobox" class="label"><%= get_label('pobox') %></label>
<%= text_field 'edit', 'pobox', 'size' => 30, 'maxsize'=> 40, 'tabindex'=> 3, 'id' => 'pobox' %>
</div>

<div class="row">
 <label for="country_id" class="label"><%= get_label('country_id') %> <span class="required">*</span></label>
 <%= simple_select('edit', Country, 4, {:selected => @edit.country_id || 484 }) %>
 </div>
<br/>

<%= observe_select('edit', 'country_id', 'select_country_state', 8) %>

<div class="row">
  <label for="state_id" class="label"><%= get_label('state_id') %> <span class="required">*</span></label>
  <div id="select_country_state">
  <%= observable_select('select_country_state', 484,5) %>
  </div>
  <%= submit_for_stack('state:country_id') %>
</div>

<div class="row">
  <label for="city_id" class="label"><%= get_label('city_id') %></label>
  <div id="select_state_city">
   <%= observable_select('select_state_city',1,6) %>
  </div>
<%= submit_for_stack('city:state_id') %>
</div>


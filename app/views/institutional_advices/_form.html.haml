.section-with-border-and-bg
  .row
    = render :partial => "/shared/errors", :object => f.object.errors

  .row
    = f.input :title, :as => :text, :input_html => { :size => '90x1' }

  .row
    .span-6
      = f.association :instadvicetarget, :using =>:name, :input_html => {:class => 'chosen-select', :prompt => true}
    #institution.span-12.last
      = f.association :institution, :using => :name , :input_html => {:class => 'chosen-select', :prompt => true}
      = f.label :request_institution, :class => 'discrete'

  .row
    .span-2
      = f.input :year, :as => :string, :input_html => { :size => '4', :autocomplete => "off" }
    .span-6.last
      = f.label :month, :required => true
      = select_month_for 'month', 'advice'


